{
  "name": "@shvmerc/eslint-config",
  "description": "This package provides custom `eslint` configurations for javascript and typescript.",
  "version": "0.1.0-alpha",
  "license": "MIT",
  "author": {
    "name": "Luciano Aedo Puga",
    "url": "https://github.com/shvmeless"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shvmeless/eslint-config.git"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/standard.js",
  "exports": {
    "./standard": "./dist/standard.js",
    "./standard-ts": "./dist/standard-ts.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "eslint",
    "eslint config",
    "linter",
    "style",
    "standard",
    "javascript",
    "typescript"
  ],
  "scripts": {
    "lint": "eslint ./src --ext .ts",
    "build": "ts-node ./src/index.ts",
    "pack": "npm pack",
    "publish": "npm run lint && rm -rf ./dist && npm run build && npm publish"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "1.7.0",
    "@types/eslint": "8.56.5",
    "@types/node": "20.11.28",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "eslint": "8.57.0",
    "eslint-config-love": "43.1.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-n": "16.6.2",
    "eslint-plugin-promise": "6.1.1",
    "ts-node-dev": "2.0.0",
    "typescript": "5.4.2"
  },
  "dependencies": {
    "@shvmerc/development": "0.1.0-alpha"
  }
}
