{
  "name": "@shvmerc/eslint-config",
  "description": "This package provides custom `eslint` configurations for javascript and typescript.",
  "version": "0.2.1-alpha",
  "license": "MIT",
  "author": {
    "name": "Luciano Aedo Puga",
    "url": "https://github.com/shvmeless"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shvmeless/eslint-config.git"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/standard.js",
  "exports": {
    "./standard": "./dist/standard.js",
    "./standard-ts": "./dist/standard-ts.js",
    "./standard-jsx": "./dist/standard-jsx.js",
    "./standard-tsx": "./dist/standard-tsx.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "eslint",
    "eslint config",
    "linter",
    "style",
    "standard",
    "javascript",
    "typescript"
  ],
  "scripts": {
    "lint": "eslint ./src --ext .ts",
    "build": "ts-node ./src/index.ts"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.1.0",
    "@types/node": "^20.12.13",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.7.0",
    "eslint-plugin-promise": "^6.2.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@shvmerc/development": "^0.1.0-alpha"
  }
}
